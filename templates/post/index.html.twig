{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Postagens Recentes - <a href="{{path('post_create')}}" class="btn btn-sm btn-success">Criar Post</a></h1>

    <ul>
        {% for post in posts %}
            <li>
                {{post.id}} - {{post.title}} - {{post.createdAt|date('d/m/Y H:i:s')}} 
                <a href="{{path('post_edit', {'id': post.id})}}"  class="btn btn-sm btn-primary">Editar</a> | 
                <a href="{{path('post_remove', {'id': post.id})}}" class="btn btn-sm btn-danger">Apagar</a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
